<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PaymentsActivity"
    android:background="@drawable/payments_background">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:cardCornerRadius="30dp"
        app:cardBackgroundColor="@drawable/card_background">
            <RelativeLayout
                android:id="@+id/cardOrganizer"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/estateImageHolder"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="50dp"
                        app:cardElevation="20dp">
                        <ImageView
                            android:id="@+id/estateImageView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/key"
                            />
                    </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/nameOfEstate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/estateImageHolder"
                    android:layout_marginTop="1dp"
                    android:layout_marginStart="20dp"
                    android:text="@string/nameOfEstate"
                    android:textColor="@color/backgroundColor"
                    android:textSize="16sp"
                    />

                <androidx.cardview.widget.CardView
                    android:id="@+id/profileHolder"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="50dp"
                    app:cardElevation="20dp">
                        <ImageView
                            android:id="@+id/profileImageView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/account"
                            android:contentDescription="@string/name" />
                </androidx.cardview.widget.CardView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_below="@+id/profileHolder"
                        android:text="@string/name"
                        android:layout_marginEnd="20dp"
                        android:textSize="16sp"
                        android:textColor="@color/backgroundColor"/>
            </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/balanceStatementRow"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/nameOfEstate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        tools:ignore="NotSibling"
        android:orientation="horizontal"
        >
            <androidx.cardview.widget.CardView
                android:id="@+id/rentBalanceCard"
                android:layout_width="125dp"
                android:layout_height="150dp"
                android:layout_marginStart="20dp"

                app:cardCornerRadius="40dp"
                app:cardBackgroundColor="#201BF4"

                >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_margin="0dp">
                                <ImageView
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:background="@drawable/purple_circle_background"
                                    android:src="@drawable/rent"
                                    />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/rentBalance"
                                        android:gravity="center"
                                        android:layout_marginTop="5dp"
                                        android:textSize="20sp"
                                        android:textColor="@color/backgroundColor"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/rent"
                                        android:textColor="@color/backgroundColor"
                                        android:textSize="19sp"
                                        android:textAlignment="center"/>

                    </LinearLayout>

            </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/serviceChargeBalanceCard"
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:layout_marginStart="10dp"
            app:cardCornerRadius="40dp"
            app:cardBackgroundColor="#201BF4"
            >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">
                                <ImageView
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:background="@drawable/background_apricot"
                                    android:src="@drawable/pig"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/rentBalance"
                                    android:textColor="@color/backgroundColor"
                                    android:textSize="20sp"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/serviceCharge"
                                    android:textAlignment="center"
                                    android:textColor="@color/backgroundColor"
                                    android:textSize="17sp"/>
                    </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/loanBalanceCard"
            android:layout_width="125dp"
            android:layout_height="150dp"
            android:layout_marginStart="10dp"
            app:cardCornerRadius="40dp"
            app:cardBackgroundColor="#201BF4"
            android:focusable="true"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">
                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:background="@drawable/background_weight"
                            android:src="@drawable/debt"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/rentBalance"
                            android:textColor="@color/backgroundColor"
                            android:textSize="20sp"
                            android:textAlignment="center"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/loan"
                            android:textSize="18sp"
                            android:textColor="@color/backgroundColor"
                            android:textAlignment="center"/>
                </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/paymentRow"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_below="@+id/balanceStatementRow"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:gravity="center">
            <androidx.cardview.widget.CardView
                android:id="@+id/rentPaymentCard"
                android:layout_width="130dp"
                android:layout_height="150dp"
                app:cardCornerRadius="40dp"
                app:cardElevation="30dp"
                app:cardBackgroundColor="#201BF4"
                android:focusable="true"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        >
                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:background="@drawable/background_weight"
                                android:src="@drawable/dollar"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/pay_rent"
                                android:textAlignment="center"
                                android:textColor="@color/backgroundColor"
                                android:textSize="20sp"/>
                    </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/serviceChargePaymentCard"
                android:layout_width="130dp"
                android:layout_height="150dp"
                android:layout_marginStart="30dp"
                app:cardCornerRadius="40dp"
                app:cardBackgroundColor="#201BF4"
                android:focusable="true"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:background="@drawable/background_weight"
                            android:src="@drawable/janitor"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/payServiceCharge"
                            android:textColor="@color/backgroundColor"
                            android:textSize="20sp"
                            android:textAlignment="center"/>
                    </LinearLayout>
            </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/loansRow"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/paymentRow"
        android:orientation="horizontal"
        android:gravity="center">
        <androidx.cardview.widget.CardView
            android:id="@+id/loanTakingCard"
            android:layout_width="300dp"
            android:layout_height="160dp"
            app:cardCornerRadius="40dp"
            app:cardBackgroundColor="#201BF4"
            app:cardElevation="30dp"
            android:clickable="true"
            android:focusable="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/takeLoan"
                            android:textSize="25sp"
                            android:textColor="@color/backgroundColor"
                            />
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="50dp"
                            android:layout_marginStart="10dp"
                            >
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="@drawable/background_weight"
                                android:src="@drawable/loan"
                                />
                        </androidx.cardview.widget.CardView>
                </LinearLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>


</RelativeLayout>